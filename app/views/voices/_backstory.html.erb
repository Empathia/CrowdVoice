<% head do %>
  <% @is_gaza = @voice.is_witness_gaza %>
  <%= include_stylesheets :backstory %>
<% end %>

<script type="text/javascript">
	window.relatedVoices = <%= raw @related_voices.to_json %>;
</script>

<%# cache("#{current_connection}_backstory_#{@voice.id}") do %>
<header class="main-header">
  <%= render :partial => "nav_bar" %>
</header>

<div class="cv-backstory-ui-wrapper"
  data-voice-title="<%= @voice.title %>"
  data-background="<%= @voice.background %>"
  data-breadcrumb-range="<%= @voice.backstory_breadcrumb_range %>">
</div> <!-- backstory_breadcrumb_range Monthly|Yearly|Decade -->

<%= include_javascripts :backstory_pack %>
<script type="text/javascript">
  new FacebookNavButton({
    fbPath : "<%= fb_path %>"
  });
</script>


